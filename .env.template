# Environment Variables Template for Treasure Hunt Application
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=treasure_hunt_db
DB_USERNAME=your_db_username
DB_PASSWORD=your_secure_db_password
DB_POOL_MAX_SIZE=10
DB_POOL_MIN_IDLE=2
DB_CONNECTION_TIMEOUT=20000
DB_IDLE_TIMEOUT=300000
DB_MAX_LIFETIME=1200000
DB_LEAK_DETECTION=60000

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_FROM_ADDRESS=your_email@gmail.com
MAIL_SUPPORT_ADDRESS=support@yourdomain.com
MAIL_CONNECTION_TIMEOUT=10000
MAIL_TIMEOUT=10000
MAIL_WRITE_TIMEOUT=10000

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
ADMIN_USERNAME=your_admin_username
ADMIN_PASSWORD=your_secure_admin_password

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
COMPANY_NAME=Treasure Hunt Adventures
SERVER_PORT=8080
REQUIRE_SSL=false

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
FILE_UPLOAD_DIR=uploads/documents
MAX_PHOTO_SIZE=2097152
MAX_DOCUMENT_SIZE=5242880
ALLOWED_PHOTO_TYPES=image/jpeg,image/jpg,image/png
ALLOWED_DOCUMENT_TYPES=application/pdf,image/jpeg,image/jpg
UPLOAD_MAX_FILE_SIZE=5MB
UPLOAD_MAX_REQUEST_SIZE=15MB

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_FILE_PATH=logs/treasure-hunt.log
LOG_MAX_SIZE=10MB
LOG_MAX_HISTORY=30

# =============================================================================
# DEVELOPMENT SETTINGS (set to false in production)
# =============================================================================
H2_CONSOLE_ENABLED=false
INCLUDE_ERROR_MESSAGE=never
INCLUDE_BINDING_ERRORS=never

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
HTTP2_ENABLED=true

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. For Gmail, use App Passwords instead of your regular password
# 2. Generate strong passwords for database and admin accounts
# 3. In production, set REQUIRE_SSL=true and use HTTPS
# 4. Never set H2_CONSOLE_ENABLED=true in production
# 5. Keep error message exposure disabled in production
# 6. Regularly rotate passwords and API keys
# 7. Use environment-specific values for different deployments
